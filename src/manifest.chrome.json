{
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://hardcover.app/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "./assets/leitner-logo.png"
  },
  "permissions": ["offscreen", "scripting", "webRequest", "tabs", "storage"]
}
