{
  "manifest_version": 3,
  "name": "Leitner",
  "version": "1.0",
  "description": "Displays the availability of books from your local library on Hardcover.",
  "author": {
    "name": "Edward Prado"
  },
  "host_permissions": [
    "*://hardcover.app/books/*",
    "https://gateway.bibliocommons.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://hardcover.app/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "icons": {
    "16": "./assets/leitner-logo.png",
    "32": "./assets/leitner-logo.png",
    "48": "./assets/leitner-logo.png",
    "128": "./assets/leitner-logo.png"
  }
}
